<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="5dp">
	<ImageView android:id="@+id/image_word_view_preview"
		android:paddingTop="5dip"
		android:maxHeight="120px"
		android:src="@drawable/no_photo_available"
		android:layout_gravity="center"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
	</ImageView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/word"></TextView>
	<EditText android:layout_width="fill_parent"
		android:singleLine="true" android:layout_height="wrap_content"
		android:hint="@string/word" android:id="@+id/edit_word_word"></EditText>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/translation"></TextView>
	<EditText android:layout_width="fill_parent"
		android:singleLine="true" android:layout_height="wrap_content"
		android:hint="@string/translation" android:id="@+id/edit_word_translation"></EditText>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/note" />
	<EditText android:layout_width="fill_parent"
		android:singleLine="true" android:layout_height="wrap_content"
		android:hint="@string/note" android:id="@+id/edit_word_note" />

	<CheckBox android:text="@string/word_reversible" android:id="@+id/edit_word_reversible"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_margin="10sp" android:layout_gravity="center"></CheckBox>

	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:baselineAligned="false" android:gravity="center_horizontal">
		<Button android:layout_height="wrap_content" android:text="@string/ok"
			android:layout_width="wrap_content" android:width="100dp" android:id="@+id/edit_word_ok"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/cancel"
			android:width="100dp" android:id="@+id/edit_word_cancel"></Button>
		<Button android:layout_height="wrap_content" android:text="@string/new_"
			android:layout_width="wrap_content" android:width="100dp"
			android:id="@+id/edit_word_new"></Button>
	</LinearLayout>


</LinearLayout>
